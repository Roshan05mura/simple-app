kind: PersistentVolume
apiVersion: v1
metadata:
   name: mypv
spec: 
  storageClassName: local-storage
  capacity:
    storage: 5Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: "/home/ec2-user/pvc"
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
   name: mysqlpvc
spec:
   storageClassName: local-storage
   accessModes:
     - ReadWriteOnce
   resources:
     requests:
        storage: 3Gi 
